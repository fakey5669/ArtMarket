    <insert id="insertPayment" useGeneratedKeys="true" keyProperty="partner_order_id"
            parameterType="llustmarket.artmarket.domain.payment.Payment">
        INSERT INTO
        safepayment(
        tid, partner_order_id, partner_user_id
        )
        VALUES(
        #{tid}, #{partner_order_id}, #{partner_user_id}
        )
    </insert>

